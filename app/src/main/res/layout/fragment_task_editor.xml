<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    tools:context=".ui.taskEditor.TaskEditorFragment">


    <Spinner
        android:id="@+id/dashboard_taskSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/dashboard_addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add" />

    <Button
        android:id="@+id/dashboard_editButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edit" />

    <Button
        android:id="@+id/dashboard_deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete" />

    <Button
        android:id="@+id/dashboard_detailsTaskButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Time Recordings" />
</LinearLayout>